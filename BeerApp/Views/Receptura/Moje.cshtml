@model IEnumerable<BeerApp.Models.Receptura>

@{
    ViewBag.Title = "Lista receptur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista receptur uzytkownika</h2>

<p>
    @using (Html.BeginForm("Search", "Receptura", FormMethod.Post))
    {
        <div class="container">
            @Html.TextBox("searchString", "", new { htmlAttributes = new { @class = "form-control" }, placeholder = "Wyszukaj recepture?" })
        </div>
        <div class="container">
            <input type="submit" value="Wyszukaj po nazwie" class="btn btn-default" />
        </div>
    }

</p>
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazwaReceptury)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Styl)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaReceptury)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Styl.NazwaStylu)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RecepturaID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RecepturaID })
                @Html.ActionLink("Delete", "Delete", new { id = item.RecepturaID })
            </td>
        </tr>
    }

</table>
